STDOUT.sync = true

require 'slop'
require 'nokogiri'
require_relative '../lib/xcop'
require_relative '../lib/xcop/version'

opts = Slop.parse(ARGV, strict: true, help: true) do |o|
  o.banner = "Usage (#{Xcop::VERSION}): xcop [options] [files...]"
  o.bool '-h', '--help', 'Show these instructions'
  o.bool '--version', 'Show current version'
  o.string '--license', 'File name of the boilerplate head license'
end

if opts.help?
  puts opts
  exit
end

if opts.version?
  puts Xcop::VERSION
  exit
end

Encoding.default_external = Encoding::UTF_8
Encoding.default_internal = Encoding::UTF_8

license = opts.license? ? File.read(opts[:license]) : ''

opts.arguments.each do |f|
  print "Validating #{f}... "
  doc = Xcop::Document.new(f)
  diff = doc.diff
  unless diff.empty?
    print "Error\n"
    puts diff
    exit -1
  end
  unless license.empty?
    ldiff = doc.ldiff(license)
    unless ldiff.empty?
      print "Broken license\n"
      puts ldiff
      exit -1
    end
  end
  print "OK\n"
end
